    "@rescript/react": "<0.10.1"
  },
  "devDependencies": {
    "@glennsl/bs-jest": "^0.5.1",
    "@sheerun/mutationobserver-shim": "^0.3.3",
    "@wyze/github-release": "^1.1.1",
    "bisect_ppx": "^2.5.0",
    "bs-platform": "^8.4.2",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "@rescript/react": "^0.10.2",
    "rimraf": "^3.0.2"
  }
